<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316project.EntranceController">
    <VBox alignment="CENTER" layoutX="100.0" layoutY="50.0" spacing="15.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="30" left="50" right="50" top="30" />
        </padding>

        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="The Integrated Environment" />

        <Button fx:id="createNewProjectButton" onAction="#onCreateNewProjectButtonClick" prefWidth="200" text="Create a New Project" />
        <Button fx:id="listConfigurationsButton" onAction="#onListConfigurationsButtonClick" prefWidth="200" text="List Configurations" />
        <Button fx:id="previousProjectsButton" prefWidth="200" text="Previous Projects" />
        <Button fx:id="helpMenuButton" prefWidth="200" text="Help Menu" />
        <Button fx:id="userGuideButton" prefWidth="200" text="User Guide" />
    </VBox>


</AnchorPane>
