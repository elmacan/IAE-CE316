<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ce316project.ListConfigController"
            prefHeight="400.0" prefWidth="600.0">
    <ListView fx:id="configurationListView" layoutX="20.0" layoutY="20.0" prefHeight="320.0" prefWidth="560.0"/>

    <!-- Alt kısım için HBox: Butonları yatay koyacağız -->
    <HBox spacing="20" layoutX="20.0" layoutY="350.0" prefHeight="40.0" prefWidth="560.0" alignment="CENTER">
        <Button fx:id="addConfigButton" text="Add Configuration" prefWidth="200.0"  />
        <Button fx:id="backButton" text="Back" prefWidth="200.0" />
    </HBox>

</AnchorPane>
